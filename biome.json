{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "src/**/*.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true
    }
  },
  "overrides": [
    {
      "include": [
        "src/**/*.spec.ts"
      ],
      "linter": {
        "enabled": true,
        "rules": {
          "correctness" : {
            "noUndeclaredVariables": "off"
          }
        }
      }
    }
  ]
}
